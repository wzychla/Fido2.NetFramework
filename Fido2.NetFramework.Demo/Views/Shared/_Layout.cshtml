<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/Resources/app.shared.js?_=@System.DateTime.UtcNow.Ticks"></script>
</head>
<body>
    @RenderBody()
    @if ( this.TempData.ContainsKey( "message" ) )
    {
        <div style="margin: 5px; padding: 20px; background-color: darkblue; color: white">
            @this.TempData["message"]
        </div>
    }
    <div id="localMessage" style="margin: 5px; padding: 20px; background-color: darkgreen; color: white; display: none">

    </div>
</body>
</html>